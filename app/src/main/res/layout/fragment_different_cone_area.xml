<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator_Different_Cone_Area">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Different Setup Cone Area Calculator"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Input for first speakers -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of first speakers:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/first_speaker_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter sizes of first speakers (in inches):"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/first_speaker_sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp" />

    <!-- Input for second speakers -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of second speakers:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/second_speaker_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter sizes of second speakers (in inches):"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/second_speaker_sizes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number" />

    <!-- Button to calculate and display result -->
    <Button
        android:id="@+id/calculateDifferenceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <!-- Output text views -->
    <TextView
        android:id="@+id/output_first_cone_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/output_second_cone_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/output_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="8dp" />
</LinearLayout>
