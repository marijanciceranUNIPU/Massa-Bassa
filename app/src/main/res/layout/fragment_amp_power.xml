<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Amp Recommended Power Calculator"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Input for number of speakers -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of speakers:" />

    <EditText
        android:id="@+id/speaker_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:minHeight="48dp" />

    <!-- Input for RMS power -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RMS power (W):" />

    <EditText
        android:id="@+id/rms_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <!-- Input for max power -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max power (W):" />

    <EditText
        android:id="@+id/max_power"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <!-- Input for ohms -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ohms:" />

    <EditText
        android:id="@+id/ohms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/speakerTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speaker Type (SVC/DVC):" />

    <RadioGroup
        android:id="@+id/speakerTypeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/svcRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SVC"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/dvcRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DVC" />
    </RadioGroup>

    <!-- Button to calculate and display result -->
    <Button
        android:id="@+id/calculate_amp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate" />

    <!-- Output text view -->
    <TextView
        android:id="@+id/output_amp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>